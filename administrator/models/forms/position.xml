<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset addfieldpath="administrator/components/com_gavoting/models/fields">
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="COM_GAVOTING_FORM_LBL_POSITION_CREATED_BY" description="COM_GAVOTING_FORM_DESC_POSITION_CREATED_BY" hidden="true" hint="COM_GAVOTING_FORM_LBL_POSITION_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="COM_GAVOTING_FORM_LBL_POSITION_MODIFIED_BY" description="COM_GAVOTING_FORM_DESC_POSITION_MODIFIED_BY" hidden="true" hint="COM_GAVOTING_FORM_LBL_POSITION_MODIFIED_BY"/>
    <field name="created_date" type="timecreated" label="COM_GAVOTING_FORM_LBL_POSITION_CREATED_DATE" description="COM_GAVOTING_FORM_DESC_POSITION_CREATED_DATE" hint="COM_GAVOTING_FORM_LBL_POSITION_CREATED_DATE"/>
    <field name="modified_date" type="timecreated" label="COM_GAVOTING_FORM_LBL_POSITION_MODIFIED_DATE" description="COM_GAVOTING_FORM_DESC_POSITION_MODIFIED_DATE" hint="COM_GAVOTING_FORM_LBL_POSITION_MODIFIED_DATE"/>
    <field name="pos_name" filter="safehtml" type="text" label="COM_GAVOTING_FORM_LBL_POSITION_POS_NAME" description="COM_GAVOTING_FORM_DESC_POSITION_POS_NAME" hint="COM_GAVOTING_FORM_LBL_POSITION_POS_NAME"/>
    <field name="cat_id" type="category" extension="com_gavoting" label="COM_GAVOTING_FORM_LBL_POSITION_CAT_ID" description="COM_GAVOTING_FORM_DESC_POSITION_CAT_ID" hint="COM_GAVOTING_FORM_LBL_POSITION_CAT_ID"/>
    <field name="elect_date" type="calendar" label="COM_GAVOTING_FORM_LBL_POSITION_ELECT_DATE" description="COM_GAVOTING_FORM_DESC_POSITION_ELECT_DATE" hint="COM_GAVOTING_FORM_LBL_POSITION_ELECT_DATE"/>
    <field name="elected" filter="safehtml" type="text" label="COM_GAVOTING_FORM_LBL_POSITION_ELECTED" description="COM_GAVOTING_FORM_DESC_POSITION_ELECTED" hint="COM_GAVOTING_FORM_LBL_POSITION_ELECTED"/>
    <field name="comment" rows="5" filter="safehtml" type="textarea" class="input-xlarge" label="COM_GAVOTING_FORM_LBL_POSITION_COMMENT" description="COM_GAVOTING_FORM_DESC_POSITION_COMMENT" hint="COM_GAVOTING_FORM_LBL_POSITION_COMMENT"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
