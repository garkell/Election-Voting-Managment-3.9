<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset addfieldpath="administrator/components/com_gavoting/models/fields">
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="COM_GAVOTING_FORM_LBL_MOTION_CREATED_BY" description="COM_GAVOTING_FORM_DESC_MOTION_CREATED_BY" hidden="true" hint="COM_GAVOTING_FORM_LBL_MOTION_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="COM_GAVOTING_FORM_LBL_MOTION_MODIFIED_BY" description="COM_GAVOTING_FORM_DESC_MOTION_MODIFIED_BY" hidden="true" hint="COM_GAVOTING_FORM_LBL_MOTION_MODIFIED_BY"/>
    <field name="created_date" type="timecreated" label="COM_GAVOTING_FORM_LBL_MOTION_CREATED_DATE" description="COM_GAVOTING_FORM_DESC_MOTION_CREATED_DATE" hint="COM_GAVOTING_FORM_LBL_MOTION_CREATED_DATE"/>
    <field name="modified_date" type="timecreated" label="COM_GAVOTING_FORM_LBL_MOTION_MODIFIED_DATE" description="COM_GAVOTING_FORM_DESC_MOTION_MODIFIED_DATE" hint="COM_GAVOTING_FORM_LBL_MOTION_MODIFIED_DATE"/>
    <field name="motion" type="textarea" rows="5" class="input-xxlarge" label="COM_GAVOTING_FORM_LBL_MOTION_MOTION" description="COM_GAVOTING_FORM_DESC_MOTION_MOTION" hint="COM_GAVOTING_FORM_LBL_MOTION_MOTION"/>
    <field name="mov_date" type="calendar" label="COM_GAVOTING_FORM_LBL_MOTION_MOV_DATE" description="COM_GAVOTING_FORM_DESC_MOTION_MOV_DATE" hint="COM_GAVOTING_FORM_LBL_MOTION_MOV_DATE"/>
    <field name="mov_id" type="members" label="COM_GAVOTING_FORM_LBL_MOTION_MOV_ID" description="COM_GAVOTING_FORM_DESC_MOTION_MOV_ID" hint="COM_GAVOTING_FORM_LBL_MOTION_MOV_ID"/>
    <field name="sec_id" type="members" label="COM_GAVOTING_FORM_LBL_MOTION_SEC_ID" description="COM_GAVOTING_FORM_DESC_MOTION_SEC_ID" hint="COM_GAVOTING_FORM_LBL_MOTION_SEC_ID"/>
    <field name="agreed" type="radio" class="btn-group btn-group-yesno" label="COM_GAVOTING_FORM_LBL_MOTION_AGREED" description="COM_GAVOTING_FORM_DESC_MOTION_AGREED" hint="COM_GAVOTING_FORM_LBL_MOTION_AGREED">
      <option value="0">JNO</option>
      <option value="1">JYES</option>
    </field>
    <field name="agreed_date" type="calendar" label="COM_GAVOTING_FORM_LBL_MOTION_AGREED_DATE" description="COM_GAVOTING_FORM_DESC_MOTION_AGREED_DATE" hint="COM_GAVOTING_FORM_LBL_MOTION_AGREED_DATE"/>
    <field name="votes_for" filter="safehtml" type="text" label="COM_GAVOTING_FORM_LBL_MOTION_VOTES_FOR" description="COM_GAVOTING_FORM_DESC_MOTION_VOTES_FOR" hint="COM_GAVOTING_FORM_LBL_MOTION_VOTES_FOR"/>
    <field name="votes_against" filter="safehtml" type="text" label="COM_GAVOTING_FORM_LBL_MOTION_VOTES_AGAINST" description="COM_GAVOTING_FORM_DESC_MOTION_VOTES_AGAINST" hint="COM_GAVOTING_FORM_LBL_MOTION_VOTES_AGAINST"/>
    <field name="comment" rows="5" filter="safehtml" type="textarea" class="input-xlarge" label="COM_GAVOTING_FORM_LBL_MOTION_COMMENT" description="COM_GAVOTING_FORM_DESC_MOTION_COMMENT" hint="COM_GAVOTING_FORM_LBL_MOTION_COMMENT"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
